<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="7dp">

    <TextView android:id="@+id/history_name"
        android:layout_height="wrap_content" android:layout_width="1dp"
        android:layout_weight="3" android:textStyle="bold" />

    <TextView android:id="@+id/history_age"
        android:layout_height="wrap_content" android:layout_width="1dp"
        android:layout_weight="1" />

    <TextView android:id="@+id/history_date"
        android:layout_height="wrap_content" android:layout_width="1dp"
        android:layout_weight="2" />

</LinearLayout>